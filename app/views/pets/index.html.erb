<p id="notice"><%= notice %></p>

<h1>Pets</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Breed</th>
      <th>Birthdate</th>
      <th>Number of vet visits</th>
      <th>History</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td><%= pet.name %></td>
        <td><%= pet.breed %></td>
        <td><%= pet.birthdate %></td>
        <td><%= pet.number_of_visits_vet %></td>
        <td>
          <% pet.pet_histories.each do |h| %>
            <ul>
              <li>
                <%= h.id %>
                <%= link_to 'Show description', pet_history_path(h.id) %>
              </li>
            </ul>
          <% end %>


        </td>

        <td><%= link_to 'Show', pet %></td>
        <td><%= link_to 'Edit', edit_pet_path(pet) %></td>
        <td><%= link_to 'Destroy', pet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pet', new_pet_path %>
